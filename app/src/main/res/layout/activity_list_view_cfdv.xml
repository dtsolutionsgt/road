<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Img_view_list" >

    <TextView
        android:id="@+id/lblETipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:text="Código"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/lblPNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblETipo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:width="0dip"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:scrollHorizontally="false"
        android:text="Descripción"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/lblPValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblPNum"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="Código"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relConsPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPNum"
        android:layout_marginTop="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iconComunicado"
            android:layout_width="24dp"
            android:layout_height="19dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/icok" />

        <TextView
            android:id="@+id/lblComunicado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iconComunicado"
            android:layout_alignBottom="@+id/iconComunicado"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/iconComunicado"
            android:text="Comunicado" />

        <TextView
            android:id="@+id/lblAnulado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:text="Anulado" />

        <ImageView
            android:id="@+id/iconAnulado"
            android:layout_width="24dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/lblAnulado"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/lblAnulado"
            android:src="@drawable/icok" />
    </RelativeLayout>

</RelativeLayout>