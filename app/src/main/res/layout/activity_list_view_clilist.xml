<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Img_view_list" >

    <TextView
        android:id="@+id/lblETipo"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="125dp"
        android:layout_toLeftOf="@+id/imgNext"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:text="Código"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblPNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblETipo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:text="Descripción"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imgDespacho"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_alignEnd="@+id/lblETipo"
        android:layout_marginEnd="-58dp"
        android:src="@drawable/pedido" />

    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:src="@drawable/icok24" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView8"
        android:src="@drawable/pago_pend" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imgNext"
        android:padding="4dp"
        android:src="@drawable/cobro48" />

</RelativeLayout>