<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Img_view_list" >

    <ImageView
        android:id="@+id/imgTel"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ok48" />

    <TextView
        android:id="@+id/lblCFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblETipo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:text="DescripciÃ³n"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/lblETipo"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_toRightOf="@+id/imgTel"
        android:gravity="right"
        android:paddingLeft="5dp"
        android:text="0,000,000.00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblFact"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblETipo"
        android:layout_toRightOf="@+id/lblETipo"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:text="Total"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lblDVTot"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblFact"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lblFact"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0,000,000.00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />

</RelativeLayout>