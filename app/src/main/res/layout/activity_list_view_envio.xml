<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Img_view_list" >

    <TextView
        android:id="@+id/lblETipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgCobro"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Tipo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblEPend"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblETipo"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right|center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="999"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#CF4040"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgDevol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblEPend"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/lblEPend"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/disable24" />

    <TextView
        android:id="@+id/lblEEnv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgDevol"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgDevol"
        android:gravity="right|center_vertical"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="999"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgCobro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblETipo"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/lblEEnv"
        android:paddingTop="3dp"
        android:src="@drawable/icok24" />

</RelativeLayout>