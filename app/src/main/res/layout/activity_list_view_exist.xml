<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:id="@+id/relexitit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="1dp"
        android:background="#BDE2F3">

        <TextView
            android:id="@+id/lblPNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:width="0dip"
            android:paddingLeft="5dp"
            android:scrollHorizontally="false"
            android:text="Descripción"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblPNum"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relexist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relexitit">

        <TextView
            android:id="@+id/lblETipo"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="Código"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblepeso"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblETipo"
            android:layout_alignBottom="@+id/lblETipo"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:text="Código"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relexistm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relexist">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/TextView01"
            android:layout_centerVertical="false"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Est.malo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#C02020"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblValorM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/TextView01"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:text="Código"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#C02020"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblepesom"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/TextView01"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#C02020"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="Estado malo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#C02020"
            android:textSize="18sp"
            android:textStyle="normal" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/relexistt"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relexistm"
        >

        <TextView
            android:id="@+id/lblValorT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:text="Código"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#2020d0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblepesoT"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2020d0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="Total"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#2020d0"
            android:textSize="18sp"
            android:textStyle="normal" />
    </RelativeLayout>

</RelativeLayout>