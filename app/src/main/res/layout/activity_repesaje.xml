<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Repesaje">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="19dp"
            android:clickable="true"
            android:onClick="doCalc"
            android:src="@drawable/calc"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="70dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:text="PESO" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView46"
            android:layout_toEndOf="@+id/textView46"
            android:ems="10"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_toEndOf="@+id/textView46"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText4"
            android:layout_toEndOf="@+id/textView46"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView46"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="CANT BOL" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@+id/editText4"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="DESC CAN" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText5"
            android:layout_alignStart="@+id/textView46"
            android:text="TOTAL" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText5"
            android:layout_toEndOf="@+id/textView46"
            android:text="0.00" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="97dp"
            android:layout_height="34dp"
            android:layout_alignEnd="@+id/imageView17"
            android:layout_below="@+id/editText4"
            android:background="@drawable/frame_btn"
            android:clickable="true"
            android:gravity="center"
            android:onClick="doSave"
            android:text="GUARDAR"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relrpbot"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/textView57"
                android:layout_width="97dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/frame_btn"
                android:clickable="true"
                android:gravity="center"
                android:onClick="doApply"
                android:text="APLICAR"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="97dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/frame_btn"
                android:clickable="true"
                android:gravity="center"
                android:onClick="doDelete"
                android:text="BORRAR"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView46"
            android:layout_below="@+id/editText5"
            android:layout_marginTop="30dp"
            android:paddingRight="10dp"
            android:text="CANT" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView52"
            android:layout_toEndOf="@+id/textView52"
            android:paddingRight="20dp"
            android:text="0.00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView52"
            android:layout_toEndOf="@+id/textView53"
            android:paddingRight="10dp"
            android:text="PESO" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView52"
            android:layout_toEndOf="@+id/textView54"
            android:text="0.00"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView52"
            android:layout_marginBottom="64dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="Repesaje"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView59"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignBottom="@+id/textView46"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/editText"
            android:gravity="center_vertical"
            android:text="0.00" />

        <TextView
            android:id="@+id/textView60"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignBottom="@+id/editText4"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/editText"
            android:gravity="center_vertical"
            android:text="0" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>