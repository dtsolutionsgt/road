<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-4dp">

        <EditText
            android:id="@+id/txtPesoD"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textView101"
            android:layout_alignBottom="@+id/textView101"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/textView101"
            android:background="@drawable/frame_btn"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/textView101"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="#93F19D"
            android:gravity="center|center_vertical"
            android:text="LBS"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblResultadoD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtPesoD"
            android:layout_alignTop="@+id/textView107"
            android:layout_alignEnd="@+id/txtPesoD"
            android:layout_alignBottom="@+id/textView107"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="#BDE2F3"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="0.000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView107"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textView101"
            android:layout_alignStart="@+id/textView101"
            android:layout_alignEnd="@+id/textView101"
            android:layout_marginStart="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="0dp"
            android:background="#FAF6AE"
            android:gravity="center|center_vertical"
            android:text="KGS"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>